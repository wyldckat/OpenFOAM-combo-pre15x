
    if (debug)
    {
        Info<< "polyMesh::calcFaceCells() : calculating faceCells" << endl;
    }

    // It is an error to attempt to recalculate faceCells
    // if the pointer is already set
    if (allOwnerPtr_ || neighbourPtr_)
    {
        FatalErrorIn("polyMesh::calcFaceCells() const")
            << "owner and neighbour already calculated"
            << abort(FatalError);
    }
    else
    {
        const faceList& f = faces();
        const cellList& c = cells();

        allOwnerPtr_ = new labelList(f.size(), -1);
        neighbourPtr_ = new labelList(f.size(), -1);
        labelList& own = *allOwnerPtr_;
        labelList& nei = *neighbourPtr_;

        // Create a temporary point-cell lookup
        DynamicList<label>::setIncrement(primitiveMesh::cellsPerPoint_);
        List<DynamicList<label> pc(points().size());

        labelListList cellLabels(c.size());

        forAll (c, cellI)
        {
             cellLabels[cellI] = c[cellI].labels(f);
        }

        forAll (c, cellI)
        {
            const labelList curCellLabels = cellLabels[cellI];

            forAll (curCellLabels, i)
            {
                pc[curCellLabels[i]].append(cellI);
            }
        }

        forAll (c, cellI)
        {
            const labelList& curFaces = c[cellI];
        }
    }
}
