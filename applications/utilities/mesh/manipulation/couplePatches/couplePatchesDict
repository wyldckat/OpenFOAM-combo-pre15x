FoamFile
{
    version         2.0;
    format          ascii;

    root            "/home/penfold/mattijs/foam/mattijs2.1/run/icoFoam";
    case            "cavity";
    instance        "system";
    local           "";

    class           dictionary;
    object          coupledPatchesDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Origin information on cyclic patches. This gives for every cyclic patch
// a reference point for the first half of the patch (cyclic patches are
// two halves with f[0] talking to f[patch.size()/2])
// and a corresponding point for the second half of the patch.
// The reference points should be such that on the first half the vectors
// from faceCentres to reference point are the same as the corresponding
// vectors on the second half (after any optional transformation)
patchInfo
{
    cyclicA
    {
        origin0  (0 0 2);
        origin1  (0 0 0);
    }

    cyclicB
    {
        origin0  (0 0 0);
        origin1  (4 0 0);
    }
}

