// FoamX Case Dictionary.

FoamFile
{
    version         2.0;
    format          ascii;

    root            "/home/dm2/henry/OpenFOAM/OpenFOAM-1.0.3/tutorials/rhoTurbFoam";
    case            "cavity";
    instance        "system";
    local           "";

    class           dictionary;
    object          fvSolution;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    // Solver for the rho equation
    rho             ICCG 1e-05 0;
    // Solver for the U equation
    U               BICCG 1e-05 0;
    // Solver for the p equation
    p               ICCG 1e-06 0;
    // Solver for the h equation
    h               BICCG 1e-05 0;
    // Solver for the R equation
    R               BICCG 1e-05 0;
    // Solver for the k equation
    k               BICCG 1e-05 0;
    // Solver for the epsilon equation
    epsilon         BICCG 1e-05 0;
}

PISO
{
    // Number of PISO correctors
    nCorrectors     2;
    // Number of non-orthogonal correctors
    nNonOrthogonalCorrectors 0;
    // momentumPredictor?
    momentumPredictor yes;
    // fluxGradp?
    fluxGradp       no;
}


