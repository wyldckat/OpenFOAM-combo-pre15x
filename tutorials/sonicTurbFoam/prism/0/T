FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet           
    {
        type            fixedValue;
        value           uniform 300;
    }

    outlet          
    {
        type            zeroGradient;
    }

    bottomWall      
    {
        type            zeroGradient;
    }

    topWall         
    {
        type            zeroGradient;
    }

    prismWall       
    {
        type            zeroGradient;
    }

    defaultFaces    
    {
        type            empty;
    }
}


