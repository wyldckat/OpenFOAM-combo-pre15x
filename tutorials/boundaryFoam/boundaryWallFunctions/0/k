// Field Dictionary

FoamFile
{
    version         2.0;
    format          ascii;

    root            "/home/dm2/henry/OpenFOAM/OpenFOAM-1.0.3/tutorials/boundaryFoam";
    case            "boundaryWallFunctions";
    instance        "0";
    local           "";

    class           volScalarField;
    object          k;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


